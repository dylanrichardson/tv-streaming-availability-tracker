{
  "name": "streamtrack-worker",
  "version": "1.0.0",
  "private": true,
  "scripts": {
    "dev": "wrangler dev",
    "deploy": "npm run validate && wrangler deploy",
    "validate": "npx tsx scripts/validate-config.ts",
    "db:create": "wrangler d1 create streamtrack",
    "db:migrate": "wrangler d1 execute streamtrack --file=./schema.sql",
    "db:migrate:local": "wrangler d1 execute streamtrack --local --file=./schema.sql"
  },
  "devDependencies": {
    "@cloudflare/workers-types": "^4.20241127.0",
    "@types/better-sqlite3": "^7.6.13",
    "better-sqlite3": "^12.5.0",
    "typescript": "^5.7.2",
    "wrangler": "^3.95.0"
  }
}
